<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}GothicList.com : The gothic musical repertoire{% endblock %}</title>
        <meta name="description" content="
            {% block description %}
                A list of the best gothic songs.
                Discover the best gothic music by styles :
                Industrial, EBM, New Wave, Darkwave, Goth Rock, Gothic Metal, Synthwave, Synth-pop
            {% endblock %}">
        {% block meta %}
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% endblock %}

        {% block css %}
            {% if app.request.server.get('HTTP_HOST') starts with 'www' %}
                <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,300,700">
            {% endif %}
            <link rel="stylesheet" href="{{ asset('css/theme.css') ~ '?' ~ assets_version }}" media="screen">
            <link rel="stylesheet" href="{{ asset('css/gothiclist.css') ~ '?' ~ assets_version }}">
            <link rel="stylesheet" href="{{ asset('css/font-awesome-4.7.0.min.css') }}">
        {% endblock %}

        {% block scripts_head %}
            {% if app.request.server.get('HTTP_HOST') starts with 'www' %}
                <script>
                    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

                    ga('create', 'UA-122118160-1', 'auto');
                    ga('send', 'pageview');
                </script>
            {% endif %}
        {% endblock %}
    </head>

    <body>
        <div id="wrap">
            {% include 'parts/navbar.html.twig' %}
            {# flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    {# danger, success or warning #}
                    <div class="col-lg-6 col-md-offset-3 alert alert-{{ label }}">
                        {{ message|raw }}
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="container">{% block body %}{% endblock %}</div>
        </div>

        {% include 'parts/modal.html.twig' %}

        {% block js %}
            <script src="{{ asset('jquery-ui-1.12.1.ui-darkness/external/jquery/jquery.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>
            {% if app.request.server.get('HTTP_HOST') starts with 'www' %}
                <script src="https://www.youtube.com/iframe_api"></script>
                <script src="https://sdk.scdn.co/spotify-player.js"></script>
            {% endif %}
        {% endblock %}

        <div id="footer">
            <div class="container">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('misc_terms') }}">Terms</a></li>
                    <li><a href="{{ path('misc_contact') }}">Contact</a></li>
                </ul>
            </div>
        </div>
    </body>
</html>