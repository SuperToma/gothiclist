{% extends "base.html.twig" %}

{% block body %}
<form action="{{ path('misc_contact') }}" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default col-lg-6">
                <div class="panel-heading">Contact us</div>
                <div class="panel-body">
                    <fieldset>
                        <div class="form-group">
                            <label for="inputEmail">Email</label>
                            <input type="email" name="email" value="{{ app.user.email }}" class="form-control" id="inputEmail" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="inputName">Name</label>
                            <input type="text" name="name" value="{{ app.user.name }}" class="form-control" id="inputName" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label for="inputFirstname">Firstname</label>
                            <input type="text" name="firstname" value="{{ app.user.firstname }}" class="form-control" id="inputFirstname" placeholder="Firstname">
                        </div>
                        <div class="form-group">
                            <label for="inputText">Text</label>
                            <textarea name="text" class="form-control" id="inputText" placeholder="Text"></textarea>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}